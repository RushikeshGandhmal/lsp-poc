{
  "name": "lsp-poc",
  "displayName": "LSP POC - Forge API",
  "description": "POC for exposing LSP features via HTTP API for Forge",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "LSP POC",
      "properties": {
        "lspPoc.port": {
          "type": "number",
          "default": 3000,
          "description": "Port for the LSP API server"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@types/express": "^4.17.21",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "express": "^4.18.2"
  }
}

