{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension (lsp-poc)",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "${workspaceFolder}"
      ],
      "outFiles": [
        "${workspaceFolder}/out/**/*.js"
      ],
      "preLaunchTask": "${defaultBuildTask}"
    },
    {
      "name": "Run Extension (carepulse)",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "D:/Full Stack Javascript Development/Nextjs Projects/carepulse"
      ],
      "outFiles": [
        "${workspaceFolder}/out/**/*.js"
      ],
      "preLaunchTask": "${defaultBuildTask}"
    }
  ],
  "compounds": [
    {
      "name": "Run Both Workspaces",
      "configurations": ["Run Extension (lsp-poc)", "Run Extension (carepulse)"],
      "stopAll": true
    }
  ]
}

